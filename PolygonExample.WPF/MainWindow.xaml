<Window x:Class="PolygonExample.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolygonExample.WPF"
        mc:Ignorable="d"
        Title="Polygon Example" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="BEFORE TRIANGULATION" HorizontalAlignment="Left" Margin="24,20,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="AFTER TRIANGULATION" HorizontalAlignment="Left" Margin="292,20,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="WITH HOLE" HorizontalAlignment="Left" Margin="609,20,0,0" VerticalAlignment="Top" FontSize="18"/>
        <local:PolygonRenderer x:Name="polyBefore" HorizontalAlignment="Left" Height="208" Margin="28,73,0,0" VerticalAlignment="Top" Width="208"/>
        <local:PolygonRenderer x:Name="polyAfter" HorizontalAlignment="Left" Height="208" Margin="284,73,0,0" VerticalAlignment="Top" Width="208"/>
        <local:PolygonRenderer x:Name="polyWithHoles" HorizontalAlignment="Left" Height="208" Margin="556,73,0,0" VerticalAlignment="Top" Width="208"/>
    </Grid>
</Window>
